<button class="uk-button uk-button-default uk-margin-small-right" type="button" uk-toggle="target: #modal-example">Open</button>
<!-- This is an anchor toggling the modal -->
<!-- This is the modal -->
<div id="modal-example" uk-modal>
  <div class="uk-modal-dialog uk-modal-body">
    <h2 class="uk-modal-title">Member</h2>
    <div id="member">
      <%= form_with model: @record, local: true do |form| %>
        <% @members.each do |member| %>
          <p>
            <%= check_box_tag "name[]", member.id, false, id: "name_#{member.id}", class: "member-checkbox" %>
            <%= label_tag "name_#{member.id}", member.name %>
          </p>
        <% end %>
      </div>
      <p class="memberuret"></p>
      <h2 class="uk-modal-title2">Duty</h2>
      <div id="duty">
        <% @duties.each do |duty| %>
          <p class="duty-checkboxes">
            <%= check_box_tag "title[]", duty.id, false, id: "title_#{duty.id}", class: "title-checkbox" %>
            <%= label_tag "title_#{duty.id}", duty.title %>
            <input type="number" class="d-none people-number">
          </p>
        <% end %>
        <p class="dutyruret"></p>
        <td><span><b>合計 :</b></span></td>
        <td><b><span id="total_sum_value"></span>個</b></td>
        <p></p>
        <div class="button is-primary is-inverted is-outlined">
          <%= form.submit "送信" %>
        </div>
      </div>
    <% end %>
  </div>
  <p class="uk-text-right">
    <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
    <button class="uk-button uk-button-primary" type="button">Save</button>
  </p>
</div>
</div>
